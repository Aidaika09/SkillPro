{{!-- Layout: main.handlebars --}}

<main>
  <section>
    <h2>{{coursesHeading}}</h2>

    {{#each courses}}
      <div class="course-card">
        <div class="course-title">{{emoji}} {{name}}</div>
        <p>{{nextLesson}}</p>
        <div class="progress-bar">
          <span style="width: {{progress}}%"></span>
        </div>
      </div>
    {{/each}}

    <p><a href="#">View All Courses</a></p>
  </section>
</main>
